        <!-- Hero Start -->
        <div class="container mt-4 mb-4 p-3 d-flex ik"></div>
        <!-- Main start -->
        <div class="container mt-5">
            <div class="table-responsive">
                <table class="table table-striped table-hover appointmentTable">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">People</th>
                            <th scope="col">Date</th>
                            <th scope="col">Time</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Appoitment Type</th>
                            <th scope="col">Price</th>
                            <th scope="col">Total Price</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>

                    <%if(!data.length){%>
                    <h1 class="text-center" style="color: #fff;">No Appoitment
                        Yet</h1>
                    <%}%>

                    <tbody class="dataTable">
                        <% var i=1 %>
                        <% data.forEach((item)=> { %>
                        <tr>
                            <td>
                                <%= i++ %>
                            </td>
                            <td>
                                <%= item.userName %>
                            </td>
                            <td>
                                <%= item.people %> People
                            </td>
                            <td>
                                <% function formatDate(dateString) { %>
                                <% const date=new Date(dateString); %>
                                <% const day=date.getDate(); %>
                                <% const month=date.getMonth() + 1; %>
                                <% const year=date.getFullYear(); %>
                                <% const formattedDay=day < 10 ? '0' + day :
                                day; %>
                                <% const formattedMonth=month < 10 ? '0' + month
                                :
                                month; %>
                                <%= formattedDay + '/' + formattedMonth + '/' +
                                year%>
                                <% } %>
                                <%= formatDate(item.date) %>
                            </td>
                            <td>
                                <%function tConvert (time) {%>
                                <% time=time.toString ().match
                                (/^([01]\d|2[0-3])(:)([0-5]\d)(:[0-5]\d)?$/) ||
                                [time];%>

                                <%if (time.length> 1) { %>
                                <%time=time.slice (1);%>
                                <%time[5]=+time[0] < 12 ? 'AM' : 'PM';%>
                                <%time[0]=+time[0] % 12 || 12; // Adjust hours%>
                                <%}%>
                                <%return time.join ('');%>
                                <%}%>

                                <%= tConvert (item.time);%>
                            </td>
                            <td>
                                <%= item.phoneNumber %>
                            </td>
                            <td>
                                <%= item.appoitmentType %>
                            </td>
                            <td>
                                <%= item.price %>
                            </td>
                            <td>
                                <%= item.totalPrice %>
                            </td>
                            <td>
                                <form action="/delete/<%= item.id %>"
                                    method="post"
                                    class="d-inline">
                                    <button class="btn" type="submit"> <i
                                            class="fas fa-trash text-danger"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

