<!doctype html>
<html lang="en">

    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
            crossorigin="anonymous">

        <!--  Favicon -->
        <link rel="apple-touch-icon" sizes="180x180"
            href="../favicon_io (1)/android-chrome-192x192.png">
        <link rel="icon" type="image/png" sizes="32x32"
            href="../favicon_io (1)/android-chrome-192x192.png">
        <link rel="icon" type="image/png" sizes="16x16"
            href="../favicon_io (1)/android-chrome-192x192.png">
        <link rel="manifest" href="/site.webmanifest">

        <!-- External Css Link -->
        <link rel="stylesheet" href="css/style.css">
        <title>Employee - Maruti X</title>
    </head>

    <body style="background-color: #fff;">

        <div class="container mt-5">
            <div class="table-responsive">
                <table class="table table-striped table-hover appointmentTable">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Join Date</th>
                            <th scope="col">Image</th>
                            <th scope="col">Category</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>

                    <%if(!data.length){%>
                    <h1 class="text-center">No Employee Yet</h1>
                    <%}%>
                    <tbody class="dataTable">
                        <% var i=1 %>
                        <% data.forEach((item)=> { %>
                        <title><%= item.appoitmentType %> - Maruti X</title>
                        <tr>
                            <td>
                                <%= i++ %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.phoneNumber%>
                            </td>
                            <td>
                                <% function formatDate(dateString) { %>
                                <% const date=new Date(dateString); %>
                                <% const day=date.getDate(); %>
                                <% const month=date.getMonth() + 1; %>
                                <% const year=date.getFullYear(); %>
                                <% const formattedDay=day < 10 ? '0' + day :
                                day; %>
                                <% const formattedMonth=month < 10 ? '0' + month
                                :
                                month; %>
                                <%= formattedMonth + '/' + formattedDay + '/' +
                                year%>
                                <% } %>
                                <%= formatDate(item.joinDate) %>
                            </td>
                            <td>
                                <%= console.log(item.image)%>
                                <img src="<%= item.image%>" alt="employeeImage"
                                    style="width: 25%; 
                                height: 10%; ">
                            </td>

                            <td>
                                <%= item.category %>
                            </td>
                            <td>
                                <form action="/editEmployee/<%= item.id %>"
                                    method="get"
                                    class="d-inline">
                                    <button class="btn" type="submit"> <i
                                            class="fas fa-pen-square text-info"></i>
                                    </button>
                                </form>
                            </td>
                            <td>
                                <form
                                    action="/deleteEmployeeByAdmin/<%= item.id %>"
                                    method="post"
                                    class="d-inline">
                                    <button class="btn" type="submit"> <i
                                            class="fas fa-trash text-danger"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <script src="https://kit.fontawesome.com/fb8d4d1a1f.js"
            crossorigin="anonymous"></script>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
    </body>

</html>